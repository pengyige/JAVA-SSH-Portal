<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<!-- Generated by MyEclipse Hibernate Tools.                   -->
<hibernate-configuration>
	<session-factory>

		<property name="dialect">
			org.hibernate.dialect.MySQLDialect
		</property>
		<property name="myeclipse.connection.profile">
			MySQL5.6
		</property>
		
		<property name="hibernate.hbm2ddl.auto">update</property>
		<property name="show_sql">true</property>
		<!-- 是否格式化sql -->  
		<property name="format_sql">true</property>  
		
		<!-- 使用HibernateTemplate不需要此项 -->
		<!-- <property name="hibernate.current_session_context_class">thread</property> --> 
		<!-- 用户映射文件 -->
		<mapping resource="top/yigege/domain/mapper/User.hbm.xml"/> 
		<!-- 用户订单映射文件 -->
		<mapping resource="top/yigege/domain/mapper/UserOrder.hbm.xml"></mapping>
		<!-- 传送点映射文件 -->
		<mapping resource="top/yigege/domain/mapper/Teleporter.hbm.xml"></mapping>
		<!-- 传送点管理员映射文件 -->
		<mapping resource="top/yigege/domain/mapper/TeleporterAdmin.hbm.xml"></mapping>
		<!-- 骑手映射文件 -->
		<mapping resource="top/yigege/domain/mapper/Rider.hbm.xml"></mapping>
		<!-- 骑手订单映射文件 -->
		<mapping resource="top/yigege/domain/mapper/RiderOrder.hbm.xml"></mapping>
		<!-- 超级管理员映射文件 -->
		<mapping resource="top/yigege/domain/mapper/SuperAdmin.hbm.xml"></mapping>	
		<!-- 系统消息映射文件 -->
		<mapping resource="top/yigege/domain/mapper/SystemMessage.hbm.xml"></mapping>
		<!--  区域映射文件-->	
		<mapping resource="top/yigege/domain/mapper/Area.hbm.xml"></mapping>

	</session-factory>

</hibernate-configuration>